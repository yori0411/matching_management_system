<body class="top">
 
    <h1 class="logo"><%= image_tag "mms.png" %></h1>

  
 <h3 class="plf"><span>My Profile</span></h3>

 <p id="notice"><%= notice %></p>



  <br>
  <table>
    <thead>
      <tr>
        <th> <h3 class="maru-box">Friends</h3>
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each_with_index do |room, index| %>
        <tr>
          <td><div class="friend"><%= @user_list[index] %></div></td>
          <td><div class="tyatto"><%= link_to 'Talk', room_path(room) %></div></td>
          <td><div class="tyatto"><%= link_to '削除', room, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>

        </tr>
      <% end %>
    </tbody>
  </table>

  <br>



 <h2 class="filename">
  <% if @user.filename.present? %>
    <%= image_tag @user.filename, :width => "300px"%>
  <% end %>
 </h2>

 <h2 class="name">
 名前
   <%= @user.name %>
 </h2>

 <div>
   <a href="/matching" class="matching_button">＋Matching!💗</a>
   <a href="/login" class="logout">Logout</a>
 </div> 
 


 <div>
   <a href="/plf" class="plf_button">プロフィール編集</a>
 </div>


</body>