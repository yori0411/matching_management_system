<h1>チャット</h1>

<ul id = "messages_index">
  <% @texts.each do |message| %>
    <% if message.user_id == @login_id %>
      <li class="mymessage"><%= message.text %></li>
    <% else %>
      <li class="youmessage"><%= message.text %></li>
    <% end %>
  <% end %>
<ul>

<%= form_tag("/rooms/create_text") do %>
    <input id="chat-form" type="text" data-behavior="chat_speak" name="message">
    <%= hidden_field_tag :id, @room.id %>
<% end %>

<br>
<%= link_to '戻る', root_path %>


