<p id="notice"><%= notice %></p>

<h1>ルーム一覧</h1>

<table>
  <thead>
    <tr>
      <th>パートナーID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.user_id2 %></td>
        <td><%= link_to 'チャット', room_path(room) %></td>
        <td><%= link_to '編集', edit_room_path(room) %></td>
        <td><%= link_to '削除', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

