<p id="notice"><%= notice %></p>

<h1>ユーザー一覧</h1>

<table>
  <thead>
    <tr>
      <th>パスワード</th>
      <th>名前</th>
      <th>性別</th>
      <th>ログインID</th>
      <th>権限</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.password %></td>
        <td><%= user.name %></td>
        <td><%= user.gender %></td>
        <td><%= user.user_id %></td>
        <td><%= user.authority %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_user_path %>
<%= link_to 'ログアウト', :auth_logout, method: :delete %>
